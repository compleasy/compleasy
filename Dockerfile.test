FROM python:3.12-slim

# Set environment variables
ENV PYTHONUNBUFFERED 1

# Copy the test entrypoint
COPY docker-entrypoint-test.sh /docker-entrypoint-test.sh
RUN chmod +x /docker-entrypoint-test.sh

# Set the working directory in the container
WORKDIR /app

# Install pip
RUN pip install --upgrade pip

# Copy requirements files (will be overridden by volume mount, but needed for build)
COPY src/requirements.txt /tmp/requirements.txt
COPY src/requirements-dev.txt /tmp/requirements-dev.txt

# Install dependencies
RUN pip install -r /tmp/requirements.txt && \
    pip install -r /tmp/requirements-dev.txt

# Install system dependencies for Playwright and WeasyPrint
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    fonts-liberation \
    fonts-unifont \
    libnss3 \
    libnspr4 \
    libatk1.0-0 \
    libatk-bridge2.0-0 \
    libcups2 \
    libdrm2 \
    libdbus-1-3 \
    libxkbcommon0 \
    libxcomposite1 \
    libxdamage1 \
    libxfixes3 \
    libxrandr2 \
    libgbm1 \
    libasound2 \
    libpango-1.0-0 \
    libpangoft2-1.0-0 \
    libcairo2 \
    libgdk-pixbuf-2.0-0 \
    shared-mime-info \
    libglib2.0-0 \
    && rm -rf /var/lib/apt/lists/*

# Install Playwright browsers (without --with-deps since we installed deps manually)
# Set browsers path to match environment variable
ENV PLAYWRIGHT_BROWSERS_PATH=/ms-playwright
RUN mkdir -p /ms-playwright && playwright install chromium

# Copy pytest configuration (will be overridden by volume mount)
COPY pytest.ini /tmp/pytest.ini

# Run the entrypoint
ENTRYPOINT ["/docker-entrypoint-test.sh"]

# Default command (can be overridden)
CMD ["pytest", "-v"]

